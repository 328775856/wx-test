/* pages/components/cart/cart.wxss */

.border {
  border: 1px #000 solid;
}

.container {
  width: 100%;
  padding: 0;
  background: #eee;
  padding-bottom: 125rpx;
  height: auto;
}

.col {
  width: 100%;
  background: #fff;
  margin-top: 10rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
}
.right{
  width: 100%;
}

checkbox {
  margin:0 30rpx;
}

.right button {
  display: inline-block;
  border-radius: 0px;
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.right button:nth-child(1){
}
.right button::after{
  border-radius: 0px;
}




/*bottom  */
.bottom{
  position: fixed;
  width:100%;
  height:120rpx;
  bottom: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom view{
  position: absolute;
  left: 30%;
}
.bottom button{
  position: absolute;
  right: 0;
  height: 120rpx;
  width:230rpx;
  text-align: center;
  line-height: 120rpx;
  background: #ff5e3a;
  color: white;
}
.bottom button {
  border-radius: 0px;
}
.bottom .button-hover{
  opacity: 0.7;
}
